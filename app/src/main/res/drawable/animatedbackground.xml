<?xml version="1.0" encoding="utf-8"?>
<transition xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/>  <!-- Border Radius -->
            <gradient
                android:angle="45"
                android:type="linear"
                android:startColor="#e8d3a2"
                android:endColor="#D3D3D3"
                android:gradientRadius="500"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/>  <!-- Border Radius -->
            <gradient
                android:angle="90"
                android:type="linear"
                android:startColor="#33FF57"
                android:centerColor="#3388FF"
                android:endColor="#FF33A6"
                android:gradientRadius="700"/>
        </shape>
    </item>
</transition>
