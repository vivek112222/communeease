<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="35dp"
    android:background="@color/blue">

    <!-- Top Bar with Settings and Notification Icons -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Settings Icon -->
        <ImageView
            android:src="@drawable/setting24"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"/>

        <!-- Notification Icon -->
        <ImageView
            android:src="@drawable/notifications"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <!-- App Title with tagline -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="make communication comfortable"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="4dp"
        android:layout_gravity="center"/>

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, User!"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: user@example.com"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>


    <!-- Random Chat Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="random chat"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"/>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <!-- Chat Now Button -->

        <!-- Meet Your Friends Button -->
        <Button
            android:id="@+id/chatNowButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/purple"
            android:text="chat now"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/friendsButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="meet your friends"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/purple"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>
